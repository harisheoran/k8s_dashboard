<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Kubernetes DashBoard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
<div class="container mb-5">

  <!-- Nav Bar -->
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Kubernetes DashBoard</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"></a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" aria-disabled="true"></a>
        </li>
      </ul>

      <!-- Select namespace -->
      <form action="/" class="d-flex" method="get">
        <select class="form-select" name="namespace" onchange="this.form.submit()"  aria-label="select namespace">
          <option selected>{{ .SelectedNamespace}}</option>
          {{ range .Namespace}}
          <option value="{{ .Name}}">{{ .Name}}</option>
          {{ else }}
          <option value="nil"></option>
          {{ end }}
        </select>
      </form>
      
    </div>
  </div>
</nav>

<!-- Main Content -->

<!-- Deployments Table -->
<h2 class="mt-4">Deployments</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Condition</th>
    </tr>
  </thead>
  {{range .Deployment}}
  <tbody>
    <tr>
      <td>{{ .Name}}</td>
      <td>{{ .Replica}}</td>
    </tr>
  </tbody>
  {{else}}
   <tbody>
    <tr>
      <td>no deployments available in the default namespace </td>
      <td></td>
    </tr>
  </tbody>
  {{end}}
</table>

<!-- Pods table -->
<h2 class="mt-4">Pods</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">State</th>
      <th scope="col">Created At</th>
    </tr>
  </thead>
  {{range .Pods}}
  <tbody>
    <tr>
      <td>{{ .Name}}</td>
      <td>{{ .State}}</td>
      <td>{{ .CreatedAt}}</td>
    </tr>
  </tbody>
  {{else}}
   <tbody>
    <tr>
      <td>no pods available in the default namespace </td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
  {{end}}
</table>

<!-- Services table -->
<h2 class="mt-4"> Services </h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Type</th>
    </tr>
  </thead>
  {{range .Svcs}}
  <tbody>
    <tr>
      <td>{{ .Name}}</td>
      <td>{{ .Type}}</td>
    </tr>
  </tbody>
  {{else}}
   <tbody>
    <tr>
      <td>No services available in the default namespace.</td>
      <td></td>
    </tr>
  </tbody>
  {{end}}
</table>

</div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>

